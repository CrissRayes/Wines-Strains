<p style="color: green"><%= notice %></p>

<h1>Cepas</h1>

<%= link_to "Nueva Cepa", new_strain_path %>
<div id="strains">
    <table class="table">
      <thead>
        <tr>
          <th>Nombre</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
  <% @strains.each do |strain| %>
        <tr>
          <td><%= strain.name%></td>
          <td><%= link_to "Ver", strain %></td>
        </tr>
  <% end %>
      </tbody>
    </table>
</div>

