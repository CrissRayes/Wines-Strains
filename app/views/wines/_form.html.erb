<%= form_with(model: wine) do |form| %>
  <% if wine.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

      <ul>
        <% wine.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :brand, style: "display: block" %>
    <%= form.text_field :brand %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.text_field :category %>
  </div>

  <div>
    <%= form.label :color, style: "display: block" %>
    <%= form.text_field :color %>
  </div>
<br>
<br>

  <div class="field">
    <%= form.label :strains, style: "display: block" %>
    <%= form.collection_check_boxes(:strain_ids, Strain.all, :id, :name) do |b| %>
      <%= b.label class:"label-checkbox" do %>
        <%= b.check_box + b.text %>
        <div class="field">
          <%= form.label :percentage, style: "display: block"%>
          <%= form.text_field :percentage %>
        </div>
      <% end %>
    <% end %>
  </div>

<br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
